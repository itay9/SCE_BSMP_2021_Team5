pipeline {
    agent { docker { image 'python:3.7' } }
    stages {
        stage('Build') {
            steps {
                sh 'python --version'
                sh 'python -m py_compile src/LoginManu.py'
            }
        }
        stage('Test') {
            steps {
                sh 'python -m pytest src/test_integration.py'
            }
        }
    }
}
